{
  "compilerOptions": {
    "target": "ESNext",
    "module": "NodeNext",
    "isolatedModules": true,
    "outDir": "./lib/",
    "newLine": "crlf",
    "moduleResolution": "nodenext",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "declaration": true,
    "allowJs": true,
  },
  "exclude": ["node_modules"],
  "include": ["src"],
  "ts-node": {
    "files": true
  }
}