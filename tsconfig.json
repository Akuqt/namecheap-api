{
  "compilerOptions": {
    "target": "ESNext",
    "module": "NodeNext",
    "isolatedModules": true,
    "outDir": "../../release/",
    "newLine": "lf",
    "moduleResolution": "nodenext",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true
  },
  "exclude": ["node_modules"],
  "include": ["src"],
  "ts-node": {
    "files": true
  }
}